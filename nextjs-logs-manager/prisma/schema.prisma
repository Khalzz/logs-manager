generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Role {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  user      User[] // remember this for one to many relations
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      Role      @relation(fields: [roleId], references: [id])
  roleId    Int
}

model Type {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  log       Log[]
}

model Log {
  id        Int       @id @default(autoincrement())
  datetime  DateTime
  type      Type      @relation(fields: [typeId], references: [id])
  typeId    Int
  service   String
  message   String
}